<form class="mt-4 ml-4" method="POST" action="/field/edit/<%= field.id %>">
	<div class="form-group row">
		<label class="col-sm-2 col-form-label" for="field-label">Label</label>
		<div class="col-sm-4">
			<input
				class="form-control"
				type="text"
				name="label"
				id="field-label"
				value="<%= field.config.label %>"
				placeholder="ex: Title, Author"
				required
			/>
		</div>
    </div>
    
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="field-min-length">
            Minimum Length
        </label>
        <div class="col-sm-4">
            <input 
                class="form-control"
                type="number"
                name="minLength"
                id="field-min-length"
                value="<%= field.config.minLength %>"
                placeholder="Minimum Character Length"
            />
        </div>
    </div>

	<div class="form-group row">
		<label class="col-sm-2 col-form-label" for="field-max-length">
			Maximum Length
        </label>
        <div class="col-sm-4">
            <input 
                class="form-control"
                type="number"
                name="maxLength"
                id="field-max-length"
                value="<%= field.config.maxLength %>"
                placeholder="Maximum Character Length"
            />
        </div>
    </div>
    
    <div class="form-group-row">
        <div class="custom-control custom-checkbox">
            <input
                class="custom-control-input"
                type="checkbox"
                id="field-is-required"
                name="isRequired"
                <% if (field.config.isRequired) { %>
                    checked
                <% } %>
            >
            <label 
                class="custom-control-label"
                for="field-is-required"
            >
                Required
            </label>
        </div>
    </div>

    <div class="form-group row">
        <button class="btn btn-success ml-3 mt-3" type="submit">
            save &amp; exit
        </button>
    </div>
</form>
