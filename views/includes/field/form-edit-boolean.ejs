	<div class="form-group">
        <label class="col-form-label" for="field-label">Label</label>
        <input
            class="form-control"
            type="text"
            name="label"
            id="field-label"
            value="<%= field.config.label %>"
            placeholder="ex: Is Draft, On Sale"
            required
        />
    </div>
    
    <div class="form-group">
        <legend class="col-form-label mr-4">Default</legend>
        <input
            class="radio mt-2"
            type="radio"
            name="default"
            id="field-default-true"
            value="true"
            <% if (field.config.default === "true") { %>
                checked
            <% } %>
        />
        <label class="col-form-label mr-2" for="field-default-true">True</label>

        <input
            class="radio mt-2"
            type="radio"
            name="default"
            id="field-default-false"
            value="false"
            <% if (field.config.default === "false") { %>
                checked
            <% } %>
        />
        <label class="col-form-label" for="field-default-false">False</label>
    </div>
            
        

    
