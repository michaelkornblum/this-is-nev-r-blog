<form action="/field/add" method="POST">
	<legend>New Field</legend>
	<input type="hidden" name="collectionId" value="<%= collection.id %>" />
	<div class="form-group">
		<label class="field-name" for="field-name">
			Field Name
		</label>
		<input
			class="form-control"
			id="field-name"
			name="fieldName"
			type="text"
			placeholder="Ex: title, body, leadImage"
			required
		/>
	</div>

	<div class="form-group">
		<label class="form-label for="field-type">
			Field Type
		</label>
		<input 
			class="form-control"
			id="field-type"
			name="fieldType"
			list="field-types"
		/>
		<datalist id="field-types">
			<% for (let fieldType of fieldTypes) { %>
				<option value="<%= fieldType %>">
			<% } %>
		</datalist>
	</div>
	
	<div>
		<button 
			class="btn btn-success mt-auto" 
			type="submit" 
			<% if (disabled) { %>
				disabled 
			<% } %> > 
				Save & Configure
		</button>
	</div>
</form>
