<form class="form-inline mb-3" action="/field/add" method="POST">
	<legend>Create New Field</legend>
	<input type="hidden" name="collectionId" value="<%= collection.id %>" />
	<div class="form-group">
		<label class="form-label mr-2" for="field-name">
			Field Name
		</label>
		<input
			class="form-control mr-3"
			id="field-name"
			name="fieldName"
			type="text"
			placeholder="Ex: title, body, leadImage"
			required
		/>
	</div>

	<div class="form-group">
		<label class="form-label mr-2" for="field-type">
			Field Type
		</label>
		<input 
			class="mr-2"
			id="field-type"
			name="fieldType"
			list="field-types"
		/>
		<datalist id="field-types">
			<% for (let fieldType of fieldTypes) { %>
				<option value="<%= fieldType %>">
			<% } %>
		</datalist>
	</div>
	
	<div class="form-group">
		<button class="btn btn-success" type="submit" <% if (disabled) { %>
			disabled <% } %> > Save
		</button>
	</div>
	
</form>
