    <div class="form-group">
        <label 
            class=col-form-label" 
            for="field-label"
        >
            Label
        </label>
        <input
            class="form-control"
            type="text"
            name="label"
            id="field-label"
            value="<%= field.config.label %>"
            placeholder="ex: Publication Date, Sale Dates"
            required
        />
    </div>

    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input
                class="custom-control-input"
                type="checkbox"
                id="field-uses-local-time"
                name="useLocalTime"
                <% if (field.config.useLocalTime) { %>
                    checked
                <% } %>
            >
            <label 
                class="custom-control-label"
                for="field-uses-local-time"
            >
                Use Local Time
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input
                class="custom-control-input"
                type="checkbox"
                id="field-uses-expiration"
                name="useExpiration"
                <% if (field.config.useExpiration) { %>
                    checked
                <% } %>
            >
            <label 
                class="custom-control-label"
                for="field-uses-expiration"
            >
                Use Expiration Time
            </label>
        </div>
    </div>
    
    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input
                class="custom-control-input"
                type="checkbox"
                id="field-uses-current-time"
                name="useCurrentTime"
                <% if (field.config.useCurrentTime) { %>
                    checked
                <% } %>
            >
            <label 
                class="custom-control-label"
                for="field-uses-current-time"
            >
                Use Current Time as Default
            </label>
        </div>
    </div>
