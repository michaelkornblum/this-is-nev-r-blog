<div class="form-group">
    <label class="form-label" for="<%= field.name %>">
        <%= field.config.label %>
    </label>

    <textarea
        class="form-control"
        id="<%= field.name %>"
        name="<%= field.name %>"
        rows="<%= field.config.rows || '3' %>"
        <% if(mode === "edit") { %>
            value="<%= entry[field.name] %>"
        <% } %>
        <% if (field.config.minValue) { %>
            min="<%= field.config.minValue %>"
        <% } %>
        <% if (field.config.maxValue) { %>
            max="<%= field.config.maxValue %>"
        <% } %>
        <% if (field.config.isRequired === "on") { %>
            required
        <% } %>
    >
    </textarea>
</div>